{
    "server": {
        "debug": false
    },
    "register": {
        "hapi-pino": {
            "plugin": "require:hapi-pino",
            "options": {
                "mergeHapiLogData": false,
                // "level": "debug",
                "ignorePaths": [
                    "/health",
                    "/alive.txt",
                    "/private"
                ],
                "tags": { "GET_items": "info", "GET_error": "error" },
                // transport option is not recomended for prod env
                "transport": {
                    "target": "pino-pretty",
                    "options": {
                        "singleLine": true,
                        "colorize": true
                        // "mkdir": true,
                        // "append": false,
                        // "destination": "logs/output.log"
                    }
                }
            }
        }
    }
}