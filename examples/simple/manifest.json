{
    "server": {
    },
    "register": {
        "hapi-pino": {
            "plugin": "require:hapi-pino",
            "options": {
                "mergeHapiLogData": true,
                // "level": "env.LOG_LEVEL || 'info'",
                "ignorePaths": [
                    "/health",
                    "/alive.txt",
                    "/private"
                ],
                "tags": { "GET_items": "info" },
                "logEvents": ["response", "error"],
                "transport": {
                    "target": "pino-pretty",
                    "options": {
                    "singleLine": true,
                    "colorize": true,
                    "mkdir": true,
                    "append": false,
                    "destination": "logs/output.log"
                    }
                }
            }
        }
    }
}