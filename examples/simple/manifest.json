{
    "server": {
    },
    "register": {
        "hapi-pino": {
            "plugin": "require:hapi-pino",
            "options": {
                "mergeHapiLogData": false,
                // "level": "debug",
                "ignorePaths": [
                    "/health",
                    "/alive.txt",
                    "/private"
                ],
                "tags": { "GET_items": "info", "GET_error": "error" },
                "logEvents": ["env.NODE_ENV", "response", "request-error"],
                "transport": {
                    "target": "pino-pretty",
                    "options": {
                        "singleLine": true,
                        "colorize": true,
                        "mkdir": true,
                        "append": false,
                        "destination": "logs/output.log"
                    }
                }
            }
        }
    }
}